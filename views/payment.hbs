<!DOCTYPE html>
<link rel="stylesheet" href="/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/bootstrap-table.css">
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/bootstrap-table.js"></script>
<h1>Payment</h1>
<div class = "panel panel-default" style = "width:70%">
	<div class = "panel-heading"></div>
	<div class = "panel-body">
		<table class = "table table-striped" id = "paytable" data-toggle = "table" data-search = "true" data-click-to-select = "true" data-select-item-name = "toolbar1" data-sort-order = "asc">
			<thead>
			<tr>
				<th data-field = "state" data-radio= "true"></th>
	    		<th data-sortable = "true" data-sortalbe = "true">Name</th>
	    		<th data-sortable = "true" data-sortalbe = "true">Amount</th>
	    		<th data-sortable = "true" data-sortalbe = "true">Status</th>
	  		</tr>
	  		</thead>
	  		<tbody>
	  		{{#each obj}}
	    		<tr>
	    			<td></td>
	    			<td>{{this.name}}</td>
	    			<td>{{this.amount}}</td>
	    			<td>{{this.status}}</td>
	    		</tr>
	  		{{/each}}
	  		</tbody>
		</table>
	</div>
	<button type = "button" class = "btn btn-default" onclick = "showmodal()">Recieve a Payment</button>
</div>
<div class = "modal" id = "addstu">
	<div class = "modal-dialog">
		<div class = "modal-content">
			<form method="POST" action="/api/payment">
				<div class = "modal-header">
					<button type = "button" class = "close" data-dismiss = "modal"><span>&times;</span><span class = "sr-only">Close</span></button>
					<h4>Recieve a Payment</h4>
				</div>
				<div class = "modal-body">
				
					Name: <input id = "selectname" name="name">
					<br><br>
					Amount: <input name = "amount">
				
				</div>
				<div class = "modal-footer">
					<button type = "submit">Submit</button>	
				</div>
			</form>
		</div>
	</div>
</div>

<script>
var showmodal = function(){
	var table = $("#addstu").modal('show');
	$("#selectname").val($("#paytable").bootstrapTable("getSelections")[0][1].toString());
	console.log($("#paytable").bootstrapTable("getSelections")[0][1]);
}

</script

