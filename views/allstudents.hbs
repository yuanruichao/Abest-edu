<!DOCTYPE html>
<link rel="stylesheet" href="/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/bootstrap-table.css">
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/bootstrap-table.js"></script>
<h1>All Students</h1>
<div class = "panel panel-default" style = "width70%">
	<div class = "panel-heading"></div>
	<div class = "panel-body">
		<table class = "table table-striped" id = "paytable" data-toggle = "table" data-search = "true" data-click-to-select = "true" data-select-item-name = "toolbar1" data-sort-order = "asc">
			<thead>
			<tr>
	    		<th>Name</th>
	    		<th>Status</th>
	    		<th>CurYear</th>
				<th>CurSchool</th>
				<th>CurSystem</th>
				<th>Tel</th>
				<th>ParName</th>
				<th>ParTel</th>
				<th>Email</th>
				<th>StuSource</th>
				<th>EtrTime</th>
				<th>TarCountry</th>
				<th>TarSchType</th>
				<th>TarSchYear</th>
				<th>TarSchSeason</th>
	  		</tr>
	  		</thead>
	  		<tbody>
	  		{{#each obj}}
    		<tr>
    			<td><a href = "/stu/{{this.slug}}">{{this.Name}}</a></td>
    			<td>{{this.Status}}</td>
    			<td>{{this.StuInfo.CurYear}}</td>
				<td>{{this.StuInfo.CurSchool}}</td>
				<td>{{this.StuInfo.CurSystem}}</td>
				<td>{{this.StuInfo.Tel}}</td>
				<td>{{this.StuInfo.ParName}}</td>
				<td>{{this.StuInfo.ParTel}}</td>
				<td>{{this.StuInfo.Email}}</td>
				<td>{{this.StuInfo.StuSource}}</td>
				<td>{{this.StuInfo.EtrTime}}</td>
				<td>{{this.StuInfo.TarCountry}}</td>
				<td>{{this.StuInfo.TarSchType}}</td>
				<td>{{this.StuInfo.TarSchYear}}</td>
				<td>{{this.StuInfo.TarSchSeason}}</td>
    		</tr>
	  		{{/each}}
	  		</tbody>
		</table>
	</div>
	<button type = "button" class = "btn btn-default" onclick = "showmodal()">Change Status</button>
</div>

<div class = "modal" id = "addstu">
	<div class = "modal-dialog">
		<div class = "modal-content">
			<form method="POST" action="/api/newstu">
				<div class = "modal-header">
					<button type = "button" class = "close" data-dismiss = "modal"><span>&times;</span><span class = "sr-only">Close</span></button>
					<h4>Add a Student</h4>
				</div>
				<div class = "modal-body">
					Name: <input name="Name" type = "text"><br><br>
					Current Year: <input name="CurYear" type = "year"><br><br>
					Current School: <input name="CurSchool" type = "text"><br><br>
					Current System: <input name="CurSystem" type = "text"><br><br>
					Tel: <input name="Tel" type = "tel"><br><br>
					Parent Name: <input name="ParName" type = "text"><br><br>
					Parent Tel: <input name="ParTel" type = "tel"><br><br>
					Email: <input name="Email" type = "email"><br><br>
					Student Source: <input name="StuSource" type = "text"><br><br>
					Enter Time: <input name="EtrTime" type = "date"><br><br>
					Target Country: <input name="TarCountry" type = "text"><br><br>
					Target School Type: <input name="TarSchType" type = "text"><br><br>
					Target School Year: <input name="TarSchYear" type = "year"><br><br>
					Target School Season: <input name="TarSchSeason" type = "text"><br><br>
				</div>
				<div class = "modal-footer">
					<button type = "submit">Create</button>	
				</div>
			</form>
		</div>
	</div>
</div>




<script>
var showmodal = function(){
	var table = $("#addstu");
	console.log(table);
	table.modal('show');
}

</script>


